{
	"name": "@commentrr/api",
	"type": "module",
	"scripts": {
		"dev": "wrangler dev",
		"deploy": "wrangler deploy --minify",
		"typegen": "wrangler types --env-interface CloudflareBindings",
		"db:prepare": "wrangler d1 execute commentrr-db --local --command 'SELECT 1'",
		"db:generate": "drizzle-kit generate",
		"db:studio": "drizzle-kit studio",
		"db:push": "wrangler d1 migrations apply commentrr-db --local",
		"db:deploy": "wrangler d1 migrations apply commentrr-db --remote"
	},
	"dependencies": {
		"@aws-sdk/client-s3": "^3.917.0",
		"@aws-sdk/s3-request-presigner": "^3.917.0",
		"@efobi/mailer": "^5.0.0",
		"@orpc/server": "^1.10.2",
		"drizzle-orm": "^0.44.7",
		"hono": "^4.10.1",
		"nanoid": "^5.1.6"
	},
	"devDependencies": {
		"@libsql/client": "^0.15.15",
		"@types/node": "^24.9.1",
		"drizzle-kit": "^0.31.5",
		"wrangler": "^4.44.0"
	}
}
